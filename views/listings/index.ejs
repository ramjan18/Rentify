<% layout('/layout/boilerplate') -%>
<style>
    #filters{
        margin-top: -16px;
        display: flex;
        flex-wrap: wrap;
        text-align: center;
    }
    .filter{
        text-align: center;
        margin-right: 2rem;
        opacity: 0.7;
    }
    .filter:hover{
        opacity: 1;
        cursor: pointer;
    }
    .filter p {
        font-size: 0.8rem;
    }
</style>
<body>

    <div class="container">
    <!-- <form action="/new" method="get">
        <button>Create New </button>
    </form> -->
    <div id="filters">
        <div class="filter">
            <div class="icon"><i class="fa-solid fa-fire"></i></div>
            <p>Trending</p>
        </div>
        <div class="filter">
            <div><i class="fa-solid fa-bed"></i></div>
            <p>Rooms</p>
        </div>
        <div class="filter">
            <div><i class="fa-solid fa-tractor"></i></div>
            <p>Farm</p>
        </div>
        <div class="filter">
            <div><i class="fa-solid fa-mountain-sun"></i></div>
            <p>Mountains</p>
        </div>
        <div class="filter">
            <div><i class="fa-solid fa-umbrella-beach"></i></div>
            <p>Beaches</p>
        </div>
        <div class="filter">
            <div><i class="fa-solid fa-person-swimming"></i></div>
            <p>Amazing Pools</p>
        </div>
        <div class="filter">
            <div><i class="fa-brands fa-fort-awesome"></i></div>
            <p>Castles</p>
        </div>
        <div class="filter">
            <div><i class="fa-solid fa-city"></i></div>
            <p>Cities</p>
        </div>
        <div class="filter">
            <div><i class="fa-solid fa-tents"></i></div>
            <p>Camping</p>
        </div>
        <div class="filter">
            <div><i class="fa-solid fa-snowflake"></i></div>
            <p>Arctic</p>
        </div>

    </div>
        <ul>
            <div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1">
            <% for(data of listingall){ %>
                <a href="/listing/<%= data.id %>" class="title-decor">
                    <div class="card mb-3 listing-card">
                        <img src="<%= data.image.url %>" class="card-img-top" style="height: 20rem;" alt="Destination Image">
                        <div class="card-body">
                          <p class="card-text">
                            <b><%= data.title %></b><br>
                            &#8377; <%= data.price.toLocaleString('en-IN') %> /night

                        </p>
                        </div>
                    </div>
                </a>
            <% } %>
        </div>
        </ul>
    </div>
    
</body>


