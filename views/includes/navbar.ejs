<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"
  integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">

<style>
  /* Custom Styles */
  .search-btn {
    background-color: #fe424d;
    color: #fff;
    border-radius: 25px;
    border: none;
    padding-top: 8px;
    padding: 8px 1rem 0 1rem;
    height: 40px;
  }

  .search-btn:hover {
    background-color: #fe424d !important;
    color: #fff;
  }

  .search-btn i {
    display: inline;
    margin-top: 0.3rem;
    margin-right: 0.4rem;
  }

  .search-input {
    border-radius: 25px;
    padding: 0.5rem 3rem 0.5rem 3rem;
    font-size: 1rem;
  }

  /* Media Query to adjust the search bar on smaller screens */
  @media (max-width: 768px) {
    .search-input {
      width: 100%;
      padding: 0.5rem;
    }

    .search-btn {
      width: 100%;
      margin-top: 0.5rem;
    }
  }
</style>
</head>


<body>
  

  <!-- Navbar -->
  <nav class="navbar navbar-expand-lg bg-body-light border-bottom sticky-top">
    <div class="container-fluid">
      <a class="navbar-brand" href="/">Rentify</a>

      <!-- Navbar Toggler (for mobile) -->
      <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarContent"
        aria-controls="navbarContent" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>

      <!-- Navbar content wrapped in collapse for responsiveness -->
      <div class="collapse navbar-collapse" id="navbarContent">
        <div class="navbar-nav me-auto">
          <a class="nav-link" href="/">Explore</a>
        </div>

        <!-- Search bar -->
        <div class="search me-auto">
          <form class="d-flex" role="search">
            <input class="form-control me-2 search-input" type="search" placeholder="Search Destination"
              aria-label="Search">
            <button class="btn btn-outline-success search-btn" type="submit">
              <i class="fa-solid fa-magnifying-glass"></i>Search
            </button>
          </form>
        </div>

        <!-- Right-hand links -->
        <div class="navbar-nav">
          <a class="nav-link" href="/listing/new">Add Destination</a>
          <% if(!currUser){ %>
            <a class="nav-link" href="/signup"><b>Sign Up</b></a>
            <a class="nav-link" href="/login"><b>Login</b></a>
            <% } %>
              <% if(currUser){ %>
                <a class="nav-link" href="/logout"><b>Logout</b></a>
                <% } %>
        </div>
      </div>
    </div>
  </nav>

  <!-- Bootstrap JavaScript (Ensure this is linked correctly) -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
    integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
    crossorigin="anonymous"></script>

</body>